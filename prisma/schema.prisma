datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model MonthView {
  monthYear String @unique

  user String

  dates Date[]
}

model Date {
  id    String @unique
  day   Int
  month Int
  year  Int

  viewId String
  view   MonthView @relation(fields: [viewId], references: [monthYear], onDelete: Cascade)

  tasks Task[]

  @@index([viewId])
}

model Task {
  id      String  @id @default(uuid())
  text    String
  checked Boolean

  dateId String
  date   Date   @relation(fields: [dateId], references: [id], onDelete: Cascade)

  @@index([dateId])
}
