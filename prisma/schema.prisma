datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Date {
  id    String @id @default(uuid())
  day   Int    @db.Int()
  month Int    @db.Int()
  year  Int    @db.Int()

  tasks Task[]
}

model Task {
  id   String @id @default(uuid())
  text String @db.VarChar(255)

  dateId String @db.VarChar(255)
  date   Date   @relation(fields: [dateId], references: [id], onDelete: Cascade)

  @@index([dateId])
}
